<mvc:View controllerName="com.eros.advancepayment.controller.Main"
   xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
	xmlns:l="sap.ui.layout" xmlns:ndc="sap.ndc" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
  <Page id="page" title="{i18n>title}" enableScrolling="false" showHeader="false">
		<headerContent>
			<Button icon="sap-icon://print" tooltip="Print"/>
		</headerContent>
		<content>
			<!-- <ObjectHeader id="oh1" title="EROS" titleActive="true" titlePress="handleTitlePress" responsive="true" numberState="Success" number=""
				numberUnit="" backgroundDesign="Translucent" fullScreenOptimized="true"/> -->
			<IconTabBar id="idIconTabBar" class="sapUiResponsiveContentPadding iconTabBarclass" expandable="false">
				<items>
					<IconTabFilter id="tranNumber" class="sapUiSmallMarginEnd" design="Horizontal" icon="sap-icon://documents" iconColor="Positive" count=""
						text="Transaction Number" key="Ok"/>
					<IconTabSeparator/>
					<IconTabFilter id="cashier" design="Horizontal" icon="sap-icon://employee-lookup" iconColor="Critical" count="" text="Cashier" key="Heavy"/>
					<IconTabSeparator/>
					<IconTabFilter id="customer" design="Horizontal" icon="sap-icon://customer" iconColor="Critical" count="" text="Customer" key="Overweight"/>
					<IconTabSeparator/>
					<IconTabFilter design="Horizontal" icon="sap-icon://print" iconColor="Critical" key="print"/>
				</items>
			</IconTabBar>
			<Input id="saleAmount" class="sapUiSmallMarginBegin sapUiSmallMarginTop"  placeholder="Enter the Amount"
				width="64%" >
			</Input>
			
			
			<HBox width="100%">
				<VBox width="80%" height="60%">
				<TextArea id="comments" class="sapUiSmallMarginBegin" width="80%"  growing="true" placeholder="Enter Comments" />
				</VBox>
				<VBox width="20%">
					<l:VerticalLayout class="sapUiContentPadding equalColumns" width="100%">
						
						<GenericTile header="CUSTOMER" frameType="OneByHalf" press="onPressCustData" class="customTile">
							<TileContent>
								<Button type="Transparent" icon="sap-icon://customer"/>
							</TileContent>
						</GenericTile>
						<GenericTile header="PAYMENTS" frameType="OneByHalf" press="onPressPayments1" class="customTile">
							<TileContent>
								<Button type="Transparent" icon="sap-icon://money-bills"/>
							</TileContent>
						</GenericTile>
						
					</l:VerticalLayout>
				</VBox>
			</HBox>
		</content>
	</Page>
</mvc:View>
